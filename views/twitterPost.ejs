<!-- views/instagramPost.ejs -->
<%- include('partials/header') %>
<title>mockup builder - twitter post</title>

<body>
    <%- include('partials/navbarHorizontal') %>
    <div class="pageLayoutContainer slds-grid">
        <div class="slds-col slds-size_3-of-5">
            <div class="page-content">
                <div class="slds-align_absolute-center">
                    <%- include('displays/twitterPostDisplay') %>
                </div>
            </div>
        </div>
        <div class="slds-col slds-size_2-of-5 page-rightbar">
            <div class="setting-container">
                <%- include('settings/twitterPostSettings') %>
                <div>
                    <%- include('partials/downloadButton') %>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>


    <script>
        $(document).ready(function () {

            //Profile Name
            bindSettingAndDisplayTextField('twpost_setProfileName', '.igpost_getProfileName');

            //Verified 
            bind_setCheckbox_showElement('twpost_setVerified', '#igpost_getVerified');

            //Post
            bind_setPost_displayPost_withHashTag('twpost_setPostText', 'igpost_getPostText')

            //SET APP LOGO IMAGE
            $("#twpost_setProfileIcon").change(function () {
                readURL(this, $('#twpost_getProfileIcon'));
            });

            $("#twpost_setPostimage").change(function () {
                readURL(this, $('#twpost_getPostImage'));
            });

            download_mockup_active();
        });
    </script>
</body>