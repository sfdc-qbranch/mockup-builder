<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Page2</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>
    <style>
        body {
            padding-top: 20px;
            padding-bottom: 20px;
        }

        section {
            max-width: 450px;
            margin: 50px auto;
        }

        section div {
            max-width: 255px;
            word-wrap: break-word;
            margin-bottom: 12px;
            line-height: 24px;
            clear: both;
        }


        .from-me {
            position: relative;
            padding: 10px 20px;
            color: white;
            background: #0B93F6;
            border-radius: 25px;
            float: right;
        }

        .from-me:before {
            content: "";
            position: absolute;
            z-index: -1;
            bottom: -2px;
            right: -7px;
            height: 20px;
            border-right: 20px solid #0B93F6;
            border-bottom-left-radius: 16px 14px;
            -webkit-transform: translate(0, -2px);
        }

        .from-me:after {
            content: "";
            position: absolute;
            z-index: 1;
            bottom: -2px;
            right: -56px;
            width: 26px;
            height: 20px;
            background: white;
            border-bottom-left-radius: 10px;
            -webkit-transform: translate(-30px, -2px);
        }


        .from-them {
            position: relative;
            padding: 10px 20px;
            background: #E5E5EA;
            border-radius: 25px;
            color: black;
            float: left;
        }

        .from-them:before {
            content: "";
            position: absolute;
            z-index: 2;
            bottom: -2px;
            left: -7px;
            height: 20px;
            border-left: 20px solid #E5E5EA;
            border-bottom-right-radius: 16px 14px;
            -webkit-transform: translate(0, -2px);
        }

        .from-them:after {
            content: "";
            position: absolute;
            z-index: 3;
            bottom: -2px;
            left: 4px;
            width: 26px;
            height: 20px;
            background: white;
            border-bottom-right-radius: 10px;
            -webkit-transform: translate(-30px, -2px);
        }

        .helperButton {
            margin-top: 20px;
        }

    </style>
</head>

<body>
    <div class="container">
        <%- include('partials/header') %>
            <div class="row">
                <!--Nav Bar-->
                <div class="col-2">
                    <%- include('partials/navbar') %>
                </div>
                <!--Left Column-->
                <div class="col-5">
                    <div class="convSetting">
                        <div>
                            <label for="FromThem1">From Them Message:</label><br>
                            <input type="text" id="FromThem1" class="message" />
                            <button id="addFromThem">Add</button>
                        </div>
                        <div>
                            <label for="FromMe1">From Me Message:</label><br>
                            <input type="text" id="FromMe1" class="message" />
                            <button id="addFromMe">Add</button>
                        </div>

                        <div>
                            <button id="removeLast" class="helperButton">Remove Last Message</button>
                        </div>

                        <div>
                            <button id="clear" class="helperButton">Clear</button>
                        </div>

                    </div>
                </div>
                <!--Right Column-->
                <div class="col-5">
                    <section id="chatPanelPreview">
                        <div class="from-me">
                            Example From Me
                        </div>

                        <div class="from-them">
                            Example From Them
                        </div>

                    </section>
                </div>

            </div>
            <%- include('partials/footer') %>
    </div>
    <script>
        function addMessage(userClass, inputElementId) {
            let messageDivNode = document.createElement("div");
            let message = document.getElementById(inputElementId).value;
            messageDivNode.setAttribute("class", userClass);
            messageDivNode.innerHTML = message;
            document.getElementById("chatPanelPreview").appendChild(messageDivNode);
        }

        $(document).ready(function() {
            // FROM THEM ADD 
            $('#addFromThem').on('click', function() {
                addMessage('from-them', 'FromThem1');
            });

            //FROM ME ADD
            $('#addFromMe').on('click', function() {
                addMessage('from-me', 'FromMe1');
            });

            //CLEAR
            $('#clear').on('click', function() {
                $('#chatPanelPreview').empty();
            });

            //REMOVE LAST CHILD
            $('#removeLast').on('click', function() {
                $('#chatPanelPreview div:last-child()').remove();
            });

        });

    </script>




</body>

</html>
